{
  "compilerOptions": {
    /* Output */
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "outDir": "dist",

    /* Module settings */
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",

    /* Code quality */
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Useful for IDE */
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },

  "include": ["src/**/*"]
}
